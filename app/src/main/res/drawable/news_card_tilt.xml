<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#00A99C"
                android:endColor="#A69A48"
                android:type="linear"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>
    <item
        android:id="@+id/shape_id"
        android:top="0dp"
        android:bottom="25dp"
        android:left="0dp"
        android:right="-300dp">
        <rotate
            android:fromDegrees="-5"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="#FFFFFF">
                </solid>
            </shape>
        </rotate>
    </item>
</layer-list>